
<section id="log-in-wrapper">
  <div class="box clearfix">
    <h2 class="title">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, placeholder: "EMAIL" %>
        <%= f.input :password, required: false, placeholder: "6-16PASSWORD" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
        <%= f.button :submit, "Log in", class: "button" %>
        <%= link_to("Sign up", new_user_registration_path, class: "btn btn-default button sign-in-button") %>
    <% end %>
  </div>
</section>
