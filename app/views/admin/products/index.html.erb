<h3>Product List</h3>
<%= link_to( "Add a Product", new_admin_product_path, class: "btn btn-primary pull-right" ) %>
<table class="table table-bordered">
<thead>
  <tr>
    <th>image</th>
    <th>title</th>
    <th>price</th>
    <th>quantity</th>
    <th>time</th>
    <th>option</th>
  </tr>
</thead>
<tbody>
  <% @products.each do |product| %>
  <tr>
    <td>
      <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
    </td>
    <td><%= link_to( product.title,product_path(product) ) %></td>
    <td><%= product.price  %></td>
    <td><%= product.quantity  %></td>
    <td><%= product.created_at  %></td>
    <td>
      <%= link_to( "Edit", edit_admin_product_path(product) )  %> |
      <%= link_to( "Destroy", admin_product_path(product), method: :delete, data: {confirm: "Are you sure?"} )  %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
