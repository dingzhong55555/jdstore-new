<h3>购物明细</h3>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>商品名称</th>
      <th>商品价格</th>
      <th>商品数量</th>
    </tr>
  </thead>
  <tbody>
    <% @product_lists.each do |product_list|  %>
    <tr>
      <td><%= product_list.product_name %></td>
      <td><%= product_list.product_price %></td>
      <td><%= product_list.quantity %></td>
    </tr>
    <% end  %>
  </tbody>
</table>
<p class="pull-right">总价<%= @order.total %>RMB</p>
<br>
<hr>

<h3>寄送资讯</h3>

<table class="table table-bordered">
  <tbody>
    <tr>
      <td>订购人</td>
    </tr>
    <tr>
      <td><%= @order.billing_name %>-<%= @order.billing_address %></td>
    </tr>
    <tr>
      <td>收货人</td>
    </tr>
    <tr>
      <td><%= @order.shipping_name %>-<%= @order.shipping_address %></td>
    </tr>
  </tbody>
</table>

<%= link_to("取消订单", apply_to_cancel_order_path(@order.token), method: :post, class: "btn btn-info btn-lg pull-left") %>


<div class="payment pull-right">
  <% if !@order.is_paid? %>
    <%= link_to("支付宝支付", pay_with_alipay_order_path(@order.token), method: :post, class: "btn btn-danger btn-lg") %>
    <%= link_to("微信支付", pay_with_wechat_order_path(@order.token), method: :post, class: "btn btn-danger btn-lg") %>
  <% else %>
    <h3>订单已付款!</h3>
  <% end %>
</div>
